<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://taskDetailView.title"
      focusComponent="form">
    <data>
        <instance id="taskDc"
                  class="com.company.medicalappointmentsystem.entity.Task">
            <fetchPlan extends="_base">
                <property name="employee" fetchPlan="_base"/>
                <property name="appointment" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="taskDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="taskDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <entityPicker id="employeeField" property="employee" >
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textField id="nameField" property="name"/>
            <dateTimePicker id="startDateField" property="startDate"/>
            <dateTimePicker id="endDateField" property="endDate"/>
            <entityPicker id="appointmentField" property="appointment">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
            <select id="typeField" property="type"/>
            <select id="statusField" property="status"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
